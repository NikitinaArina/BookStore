@model List<BookStore.Models.PurchaseViewModel>

@{
    ViewBag.Title = "Лист заказов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <h3>Лист заказов</h3>
    <table class="table table-dark table-striped table-hover">
        <tr class="header">
            <td style="width: 15%"><p>Id заказа</p></td>
            <td style="width: 15%"><p>Фио</p></td>
            <td style="width: 15%"><p>Email</p></td>
            <td style="width: 15%"><p>Телефон</p></tdstyle="width:>
            <td style="width: 15%"><p>Книги</p></td>
            <td style="width: 15%"><p>Цена</p></td>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td><p>@Model[i].Id</p></td>
                <td><p>@Model[i].Person</p></td>
                <td><p>@Model[i].Email</p></td>
                <td><p>@Model[i].Phone</p></td>
                <td>
                    <ul>
                        @foreach (var book in Model[i].Books)
                        {
                            <li>@Html.Raw($"{book.Name} {book.Author} | {book.Quantity} шт")</li>
                        }
                    </ul>
                </td>
                <td><p>@Model[i].TotalPrice</p></td>
            </tr>
        }
    </table>
</div>