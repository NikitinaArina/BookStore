@{
    ViewBag.Title = "Корзина";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div>
        <h3>Корзина:</h3>
        <table class="table table-dark table-striped table-hover">
            <tr class="header">
                <td style="width: 15%"><p>Название книги</p></td>
                <td style="width: 15%"><p>Автор</p></td>
                <td style="width: 15%"><p>Цена</p></td>
                <td style="width: 15%"><p>Кол-во</p></td>
            </tr>
            @foreach (var cart in ViewData["cart"] as System.Collections.Generic.Dictionary<int, BookStore.Models.Book>)
            {
                <tr>
                    <td style="width: 15%"><p>@Html.DisplayFor(i => @cart.Value.Name)</p></td>
                    <td style="width: 15%"><p>@Html.DisplayFor(i => @cart.Value.Author)</p></td>
                    <td style="width: 15%"><p>@Html.DisplayFor(i => @cart.Value.Price)</p></td>
                    <td style="width: 15%"><p>@Html.DisplayFor(i => @cart.Value.Quantity)</p></td>
                </tr>
            }
        </table>
        <div>
            @{Html.RenderAction("PurchaseViewPartial");}
        </div>
    </div>

