@model List<BookStore.Models.Book>

@{
    ViewBag.Title = "Редактирование книг";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>Редактировать книги</h3>
    <table class="table table-dark table-striped table-hover">
        <tr class="header">
            <td style="width: 15%"><p>Название книги</p></td>
            <td style="width: 15%"><p>Автор</p></td>
            <td style="width: 15%"><p>Цена</p></td>
            <td style="width: 15%"><p>Кол-во</p></td>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            Html.RenderAction("EditBookPartial", Model[i]);
        }
    </table>
</div>